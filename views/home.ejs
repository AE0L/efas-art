<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('partials/head_meta') %>

        <title>Home | EFAS Art</title>

        <%- include('scripts/stylesheet') %>

        <%- include('partials/head_styles') %>

        <link rel="stylesheet" href="/css/user-page.css">
        <link rel="stylesheet" href="/css/user-page_works.css">

        <style>
            #allworks-cont {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                justify-items: center;
            }

        </style>
    </head>

    <body>
        <%- include('partials/nav-bar', { active: 0 }) %>

        <div id="content-cont" class="container mb-5">
            <main class="mt-5">
                <h3 class="mb-3">Followed artists' recent works</h3>

                <% if (works.length > 0) { %>
                <div id="allworks-cont" class="container-fluid gap-3 mb-5">
                    <% for (let work of works) { %>

                    <%- include('data/dashboard_bookmark', {
                        art_id: work.id,
                        art_title: work.title,
                        art_user: work.user,
                        art_pic: work.pic
                    }) %>

                    <% } %>

                </div>
                <% } else { %>

                <div class="container-fluid mb-3">
                    <p class="text-muted text-center">Followed artists doesn't have any recent works</p>
                </div>

                <% } %>
        </div>
        </main>
        </div>

        <%- include('partials/footer') %>
    </body>

</html>

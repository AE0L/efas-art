<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('partials/head_meta') %>

        <title><%= user.handle %> - Art Collections | EFAS Art</title>

        <%- include('scripts/stylesheet') %>

        <%- include('partials/head_styles') %>

        <link rel="stylesheet" href="/css/user-page.css">
        <link rel="stylesheet" href="/css/user-page_collections.css">

    </head>

    <body>
        <%- include('partials/nav-bar', { active: 0 }) %>

        <div id="content-cont" class="container mb-5">
            <%- include('partials/user/header', user) %>

            <main>
                <%- include('partials/user/nav', { 
                    user: user,
                    active: 2
                }) %>

                <h3 class="mb-3">Collections</h3>

                <% if (cols.length > 0) { %>

                <% for (let col of cols) { %>

                <div class="container-fluid d-flex flex-wrap gap-3 mb-5">
                    <%- include('data/user_collection', {
                        col_id: col.id,
                        col_pic: col.pic,
                        col_title: col.title,
                        col_desc: col.description
                    }) %>
                </div>

                <% } %>

                <% } else { %>

                <div class="container-fluid mb-3">
                    <p class="text-muted text-center">This user doesn't have any artwork collection yet</p>
                </div>

                <% } %>
            </main>
        </div>

        <%- include('partials/footer') %>
    </body>

</html>

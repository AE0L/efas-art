<div class="modal fade" id="signup">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modalcon">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">User Sign-Up</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="signup-form" method="post" action="/" class="needs-validation" oninput="signup_form_validate()" novalidate>
                    <div class="form-group">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="_email" placeholder="Enter email" name="email"
                            required>
                        <div id="email_feedback" class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="fullname" class="col-form-label">Full Name:</label>
                        <div class="form-row">
                            <div class="col">
                                <input type="text" class="form-control" id="firstname" placeholder="First Name"
                                    name="first_name" required>
                                <div id="firstname_feedback" class="invalid-feedback"></div>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="lastname" placeholder="Last Name"
                                    name="last_name" required>
                                <div id="lastname_feedback" class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="col-form-label">Username:</label>
                        <input type="text" class="form-control" id="username" placeholder="Enter username" name="username"
                            min="4" required>
                        <small class="form-text text-muted">Must be at least 4 characters
                            long</small>
                        <div id="username_feedback" class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="mainpass" placeholder="Enter password"
                            name="password" min="8" max="20" required>
                        <small class="form-text text-muted">Must be 8-20 characters long
                            long</small>
                        <div id="mainpass_feedback" class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Confirm Password</label>
                        <input type="password" class="form-control" id="conpassword" placeholder="Confirm password"
                            name="conpassword" required>
                        <div id="conpassword_feedback" class="invalid-feedback"></div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" form="signup-form" class="btn btn-primary" id="signup_button">Sign-Up</button>
            </div>

        </div>
    </div>
</div>

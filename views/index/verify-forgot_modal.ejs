<!-- Login Modal -->
<div class="modal fade" id="new-pass" aria-hidden="true" tabindex="-1" aria-labelledby="forgotpass">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modalcon">
            <div class="modal-header">
                <h4 class="modal-title">Forgot Password</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form data-uid="<%= uid %>" id="new-pass-form" class="needs-validation" novalidate
                    oninput="verify_form_validate()">
                    <div class="form-group">
                        <label for="verify_pass">New Password</label>
                        <input type="password" class="form-control" id="verify_pass"
                            placeholder="Enter your new password" name="password" min="8" max="20" required>
                        <small class="form-text text-muted">Must be 8-20 characters long
                            long</small>
                        <div id="verify_pass_feedback" class="invalid-feedback"></div>
                    </div>

                    <div class="form-group">
                        <label for="con_verify_pass">Confirm Password</label>
                        <input type="password" class="form-control" id="con_verify_pass"
                            placeholder="Confirm your new password" name="conpassword" required>
                        <div id="con_verify_pass_feedback" class="invalid-feedback"></div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button form="new-pass-form" type="submit" class="btn btn-primary" id="forgot_btn">Update
                    password</button>
            </div>
        </div>
    </div>
</div>

<header class="container-fluid d-flex py-5 justify-content-start" style="font-family: 'Raleway', sans-serif;">
    <div class="row w-100">
        <div class="col-auto d-flex align-items-center">
            <img class="rounded-circle border border-dark"
                src="https://drive.google.com/uc?export=view&id=<%= user.pic %>" alt="pfp" width="100" height="100"
                style="background-color: #353531">
        </div>

        <div class="col">
            <div class="row">
                <h1 class="display-3 col"><%= user.name %></h1>
            </div>

            <div class="row">
                <h2 class="lead col"><%= user.handle %></h2>
            </div>
        </div>

        <div class="col-auto pt-3">
            <% if (user.followed) { %>

            <a href="/u/<%= user.id %>/unfollow?page=<%= page %>" role="button" id="follow-btn" type="button"
                class="my-3 btn btn-secondary w-100">
                <i class="fas fa-minus me-1"></i>
                Unfollow
            </a>

            <% } else { %>

            <a href="/u/<%= user.id %>/follow?page=<%= page %>" role="button" id="follow-btn" type="button"
                class="my-3 btn btn-primary w-100">
                <i class="fas fa-plus me-1"></i>
                Follow
            </a>

            <% } %>
        </div>
    </div>
</header>
